<div class="aside">
    <h3 class="title">Articles populaires</h3>
    {% if posts|length %}
        <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ path('rudak_blog_post',{id:post.id,slug:post.slug}) }}"
                       title="{{ post.title }} - vu {{ post.hit }} fois">
                        {{ post.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-center">
            En attente d'articles...
        </p>
    {% endif %}
</div>

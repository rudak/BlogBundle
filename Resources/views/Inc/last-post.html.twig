<div class="aside">
    <h3 class="title">
        Derniers articles
    </h3>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('rudak_blog_post',{id:post.id,slug:post.slug}) }}"
                   title="{{ post.title }} - vu {{ post.hit }} fois">
                    {{ post.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>

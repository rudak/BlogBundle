{% extends 'RudakBlogBundle::layout.html.twig' %}

{% block layout %}

    <div class="row">
        <div class="col-sm-6 col-md-9">
            <h1>Liste des posts</h1>
            {% for post in posts %}
                <div class="post">
                    <h2>{{ post.title|capitalize }}</h2>

                    <p class=" text-justify">
                        {{ post.hat }}
                    </p>

                    <p>
                        <small>
                            Post√© le {{ post.date|date('d/m/Y') }} par {{ post.creatorName }}
                        </small>
                    </p>
                    <p>
                        <a href="{{ path('rudak_blog_post',{id:post.id,slug:post.slug}) }}" class="btn btn-default">
                            Lire cet article
                        </a>
                    </p>
                </div>
            {% endfor %}
            <hr/>
            <nav>
                <ul class="pagination">
                    {{ pagination|raw }}
                </ul>
            </nav>
        </div>
        <div class="col-sm-6 col-md-3">
            {{ render(controller('RudakBlogBundle:Default:getLastPosts')) }}
            {{ render(controller('RudakBlogBundle:Default:getPopularPosts')) }}
        </div>
    </div>


{% endblock %}

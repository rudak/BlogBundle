{% extends 'RudakBlogBundle::layout.html.twig' %}

{% block layout -%}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('rcmAdminIndex') }}">Administration</a>
        </li>
        <li>
            <a href="{{ path('admin_blog_tag') }}">
                Tags
            </a>
        </li>
        <li class="active">
            Voir le tag
        </li>
    </ol>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>



    <p>

        <a href="{{ path('admin_blog_tag_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            modifier
        </a>
    </p>
    {{ form(delete_form) }}

{% endblock %}

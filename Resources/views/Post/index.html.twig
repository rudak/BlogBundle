{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdate</th>
                <th>Lasteditdate</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Creator</th>
                <th>Public</th>
                <th>Hit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_blog_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastEditDate %}{{ entity.lastEditDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.creator }}</td>
                <td>{{ entity.public }}</td>
                <td>{{ entity.hit }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_blog_post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_blog_post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_blog_post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

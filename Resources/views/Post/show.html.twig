{% extends admin_layout %}

{% block layout %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('rcmAdminIndex') }}">Administration</a>
        </li>
        <li>
            <a href="{{ path('admin_blog_post') }}">Articles</a>
        </li>
        <li class="active">Voir un article</li>
    </ol>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td>
                {% if entity.picture %}
                    <img src="{{ entity.picture.getwebpath|imagine_filter('post_pict_show') }}"
                         alt="image_post_{{ entity.id }}"/>
                {% else %}
                    <img src="{{ 'uploads/post_images/no-image.jpg'|imagine_filter('post_pict_show') }}"
                         alt="no image"/>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Chapeau</th>
            <td>{{ entity.hat }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td class="well">{{ entity.content|raw }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Public</th>
            <td>
                {% if entity.public %}
                    <span class="label label-success">Oui</span>
                {% else %}
                    <span class="label label-warning">Non</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Vues</th>
            <td>
                <span class="badge">
                    {{ entity.hit }}
                    </span>
            </td>
        </tr>
        <tr>
            <th>RÃ©dacteur</th>
            <td>{{ entity.creatorName }}</td>
        </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('admin_blog_post_edit', { 'id': entity.id }) }}" class="btn btn-success">
            Modifier
        </a>
    </p>
    {{ form(delete_form) }}
{% endblock %}
